            -webkit-radial-gradient(50% -100px, circle cover, rgba(255,255,255,0.6) 0%,
    transparent 100%),-webkit-linear-gradient(top, #393939, #393939);">-->
<body style=" background: #393939">
    <div class=" navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Your Projects", "Dashboard", "Project", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "Index", "Home", null, null, "anchor_aboutUs", new { id = "anchor_aboutUs" }, null)</li>
                    <li>@Html.ActionLink("Contact", "Index", "Home", null, null, "anchor_contact", new { id = "anchor_contact" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color: #Ec6A35">&copy; @DateTime.Now.Year - Proj6</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
